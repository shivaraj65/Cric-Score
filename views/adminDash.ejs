<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Admin Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Audiowide&family=Cabin+Sketch&display=swap" rel="stylesheet">
    <!-- CSS only -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <style media="screen">
    body{
      text-align: center;
    }
    a{
      color: #e6e6e6;
      text-decoration: none;
    }
    a:hover{
      text-decoration: none;
    }
    .background{
      height:100%;
      width:100vw;
      position: fixed;
      background: #2C3E50;
      background: -webkit-linear-gradient(to top, #4CA1AF, #2C3E50);
      background: linear-gradient(to top, #4CA1AF, #2C3E50);
      z-index: -9999;
    }
    .section-1{
      padding: 20px 0;
    }
    .container{
      /* padding-top: 20px; */
    }
    .font-1{
      font-family: 'Audiowide', cursive;
      font-size: 2.5rem;
    }
    .font-2{
      font-family: 'Audiowide', cursive;
      font-size: 1.5rem;
    }
    .font-3{
      font-family: 'Cabin Sketch', cursive;

      font-size: 1rem;
    }
    .text-white{
      color: #fff;
    }
    .card {
      border:none;
      width: 90%;
      padding: 15px 10px;
      margin: auto;
      /* background: #616161;
      background: -webkit-linear-gradient(to bottom, #9bc5c3, #616161);
      background: linear-gradient(to bottom, #9bc5c3, #616161);  */

      background: #808080;
      background: -webkit-linear-gradient(to bottom, #3fada8, #3fada8,#4fada8,  #808080);
      background: linear-gradient(to bottom, #3fada8, #3fada8,#4fada8,  #808080);

      box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
      transition: 0.5s;
    }
    .card-2 {
      padding: 20px 10px;
      margin: 10px auto;
      background: #808080;
      background: -webkit-linear-gradient(to right, #3fada8, #808080);
      background: linear-gradient(to right, #3fada8, #808080);
      box-shadow: 0 4px 8px 0 rgba(0,0,0,0.5);
      transition: 1s;
    }
    /* On mouse-over, add a deeper shadow */
    .card:hover {
      box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
    }
    /* On mouse-over, add a deeper shadow */
    .card-2:hover {
      box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
    }
    .card-body{
      padding-bottom: 5px;
    }
    .scroll-div{
      height: 90vh;
      overflow-y: auto;
      position: relative;
      margin: auto;
    }
    ::-webkit-scrollbar {
        width: 0;
        background: transparent;
    }
    /* for md and lg devices */
    @media(min-width:992px){
      .section-1{
        width:50%;
        margin: auto;
      }
    }
    /* for s and xs devices */
    @media only screen and (max-width:990px){
      .scorll-div{
        height:90vh;
        /* overflow-y:visible; */
      }
    }
      .section-1{
        width:90%;
        margin:auto;
      }
    }
    .padding_t{
      padding-top:110px;
    }


  </style>
  <body>
    <!-- JS, Popper.js, and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

    <div class="background"></div>
    <h1 class="text-white font-1 padding_t">Welcome Moderator</h1>
    <div class="container text-white">
    <div class="row">

      <div class="col-lg-6">
        <a href="/adduser-admin<%=ID%>" class="col-md-3">
          <div class="card">
          <h1 class="font-2">Add user</h1>
          </div>
        </a>
        <a href="/remove<%=ID%>" class="col-md-3 col-sm-12">
          <div class="card ">
          <h1 class="font-2">Remove User</h1>
          </div>
        </a>
        <a href="/createMatch<%=ID%>" class="col-md-3 col-sm-12">
          <div class="card ">
          <h1 class="font-2">Create match</h1>
          </div>
        </a>
        <a href="/updateScore<%=ID%>" class="col-md-3  col-sm-12">
          <div class="card ">
          <h1 class="font-2">Update Scores</h1>
          </div>
        </a>
        <a href="/AComment<%=ID%>" class=" col-md-6  col-xs-12">
          <div class="card">
          <h1 class="font-2">Add Commentry</h1>
          </div>
        </a>
        <a href="/deleteMatch<%=ID%>" class=" col-md-6  col-xs-12">
          <div class="card">
          <h1 class="font-2">remove match</h1>
          </div>
        </a>
        <a href="/" class=" col-md-6  col-xs-12">
          <div class="card">
          <h1 class="font-2">Logout</h1>
          </div>
        </a>
      </div>
      <div class="col-lg-6 ">
        <h4 class="font-2">Match Stats</h4>
        <h1 class="font-2">Current Matches</h1>
        <div class="scroll-div">
          <%  for(var i=0 ; i < match_data.length ; i++){  %>
             <div class="card-2 ">
               <a href="/match_info<%= match_data[i].id %>" class="text-white">
                 <div class="card-body">
                   <h1 class="font-2"><%=match_data[i].series%></h1>
                   <hr>
                   <h2 class="font-3 "><%=match_data[i].teams%></h2>
                   <h5 class="font-3"><%=match_data[i].score%></h5>
                   <p class="font-3"><%=match_data[i].players%></p>
                   <p class="font-3"><%=match_data[i].venue%></p>
                 </div>
               </a>
             </div>
            <% } %>
        </div>
      </div>
    </div>
      </div>
    </div>
  </body>
</html>
